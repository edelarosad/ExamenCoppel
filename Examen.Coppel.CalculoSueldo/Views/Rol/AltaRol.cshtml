@model RolModel

@{
    ViewData["Title"] = Model.RolId==0? "Alta Roles":"Actualizar Rol";
}
<h1>@ViewData["Title"]</h1>
<form method="post" class="form-floating">
    <input type="hidden" asp-for="RolId" />
    <div class="form-group">
        <label asp-for="RolClave"></label>
        <input class="form-control" asp-for="RolClave" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input class="form-control" asp-for="Descripcion" />
    </div>
    <br />
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
        <button asp-action="Index" class="btn btn-sm btn-danger">Cancelar</button>
    </div>
</form>